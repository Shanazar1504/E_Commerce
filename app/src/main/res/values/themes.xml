<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.E_Commerce_Example" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gr_top</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.E_Commerce_Example" parent="Base.Theme.E_Commerce_Example" />

    <style name="Theme.E_Commerce_Example.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.E_Commerce_Example.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.E_Commerce_Example.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>